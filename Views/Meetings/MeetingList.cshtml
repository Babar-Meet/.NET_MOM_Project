@{
    ViewData["Title"] = "Meeting List";
}

<div class="pagetitle d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Meeting Table</h1>

    <a asp-controller="Meetings"
       asp-action="MeetingAddEdit"
       class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add
    </a>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Meeting ID</th>
                                <th>Meeting Date</th>
                                <th>Venue</th>
                                <th>Type</th>
                                <th>Department</th>
                                <th>Description</th>
                                <th>Document</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Status</th>
                                <th>Cancelled Date</th>
                                <th>Cancellation Reason</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Meetings != null)
                            {
                                @foreach (var meeting in ViewBag.Meetings as List<MOM_Project.Models.MeetingsModel>)
                                {
                                    <tr>
                                        <td>@meeting.MeetingID</td>
                                        <td>@meeting.MeetingDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@meeting.MeetingVenue</td>
                                        <td>@meeting.MeetingType</td>
                                        <td>@meeting.Department</td>
                                        <td>@meeting.MeetingDescription</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(meeting.DocumentPath))
                                            {
                                                <a href="#">@meeting.DocumentPath</a>
                                            }
                                        </td>
                                        <td>@meeting.Created.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@meeting.Modified.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>
                                            @{
                                                // Determine status based on IsCancelled and date
                                                if (meeting.IsCancelled == true)
                                                {
                                                    <span class="badge bg-warning">Cancelled</span>
                                                }
                                                else if (meeting.MeetingDate < DateTime.Now)
                                                {
                                                    <span class="badge bg-success">Completed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">Upcoming</span>
                                                }
                                            }
                                        </td>
                                        <td>
                                            @if (meeting.CancellationDateTime.HasValue)
                                            {
                                                @meeting.CancellationDateTime.Value.ToString("yyyy-MM-dd HH:mm:ss")
                                            }
                                        </td>
                                        <td>@meeting.CancellationReason</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary">Edit</button>
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="13" class="text-center">No meetings found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>