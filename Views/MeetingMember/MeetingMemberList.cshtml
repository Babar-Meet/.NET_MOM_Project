@{
    ViewData["Title"] = "Meeting Member List";
}

<div class="pagetitle d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Meeting Member Table</h1>

    <a asp-controller="MeetingMember"
       asp-action="MeetingMemberAddEdit"
       class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Meeting Member
    </a>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Meeting Member ID</th>
                                <th>Meeting ID</th>
                                <th>Staff ID</th>
                                <th>Present</th>
                                <th>Remarks</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.MeetingMembers != null)
                            {
                                @foreach (var member in ViewBag.MeetingMembers as List<MOM_Project.Models.MeetingMemberModel>)
                                {
                                    <tr>
                                        <td>@member.MeetingMemberID</td>
                                        <td>@member.MeetingID</td>
                                        <td>@member.StaffID</td>
                                        <td>
                                            @if (member.IsPresent)
                                            {
                                                <span class="badge bg-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">No</span>
                                            }
                                        </td>
                                        <td>@member.Remarks</td>
                                        <td>@member.Created.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@member.Modified.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary">Edit</button>
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center">No meeting members found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>