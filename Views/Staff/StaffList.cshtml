@{
    ViewData["Title"] = "Staff List";
}

<div class="pagetitle d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Staff Table</h1>

    <a asp-controller="Staff"
       asp-action="StaffAddEdit"
       class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add
    </a>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Staff ID</th>
                                <th>Department</th>
                                <th>Staff Name</th>
                                <th>Mobile No</th>
                                <th>Email Address</th>
                                <th>Remarks</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.StaffList != null)
                            {
                                @foreach (var staff in ViewBag.StaffList as List<MOM_Project.Models.StaffModel>)
                                {
                                    var departmentName = ViewBag.DepartmentMap[staff.DepartmentID] as string;

                                    <tr>
                                        <td>@staff.StaffID</td>
                                        <td>@departmentName</td>
                                        <td>@staff.StaffName</td>
                                        <td>@staff.MobileNo</td>
                                        <td>@staff.EmailAddress</td>
                                        <td>@staff.Remarks</td>
                                        <td>@staff.Created.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@staff.Modified.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary">Edit</button>
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center">No staff members found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>