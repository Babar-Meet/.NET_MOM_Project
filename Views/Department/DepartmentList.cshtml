@{
    ViewData["Title"] = "Department List";
}

<div class="pagetitle d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Department Table</h1>

    <a asp-controller="Department"
       asp-action="DepartmentAddEdit"
       class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add
    </a>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Department ID</th>
                                <th>Department Name</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Departments != null)
                            {
                                @foreach (var department in ViewBag.Departments as List<MOM_Project.Models.DepartmentModel>)
                                {
                                    <tr>
                                        <td>@department.DepartmentID</td> <!-- Changed from DepartmentId to DepartmentID -->
                                        <td>@department.DepartmentName</td>
                                        <td>@department.Created.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@department.Modified.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary">Edit</button>
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">No departments found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>